<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_servicio"
    android:elevation="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/it_tipo_cultivo"
        android:src="@mipmap/ic_launcher"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <TextView
        android:id="@+id/it_nombre_sector"
        android:text="Nombre sector"
        android:layout_centerHorizontal="true"
        style="@android:style/TextAppearance.DialogWindowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/it_direccion"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/it_tipo_cultivo"
        android:text="ABLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
<View
android:id="@+id/selected_overlay"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#88673AB7"
android:visibility="invisible" />
   </android.support.v7.widget.CardView>