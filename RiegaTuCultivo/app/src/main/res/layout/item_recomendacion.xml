<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp">
    <TextView
        android:id="@+id/it_nombre_sector"
        android:text="Sector"
        android:layout_centerHorizontal="true"
        style="@android:style/TextAppearance.DialogWindowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/it_tipo_cultivo"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/it_nombre_sector"
        android:layout_width="64dp"
        android:layout_height="64dp" />
    <TextView
        android:id="@+id/it_recomendacion"
        android:layout_below="@id/it_nombre_sector"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/it_tipo_cultivo"
        android:text="La recomendaciÃ³n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/it_alerta_icono"
        android:src="@mipmap/ic_launcher"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/it_nombre_sector" />
</RelativeLayout>